<%- include("partials/header.ejs"); %>

    <body>
        <%- include("partials/navbar.ejs"); %>
            <div class="container">
               <hr>
               <h1><%= pergunta.titulo %></h1>
               <p><%= pergunta.descricao %></p>
               <hr>
               <form action="/responder" method="POST">
                   <h3>Responda:</h3>
                   <textarea placeholder="Digite sua resposta" name="resposta" class="form-control" cols="30" rows="10">
                   </textarea><br>
                   <input type="hidden" name="perguntaId" value="<%= pergunta.id%>">
                   <button type="submit" class="btn btn-primary">Responder</button> 
               </form>
               <hr>
               <h3>Resposta</h3> <br>
               <hr>
               <% resposta.forEach(resposta => {  %>
                <div class="card">
                    <div class="card-body">
                        <p> <%= resposta.corpo %></p><br>
                    </div>
                </div>
                   
                <% }) %>
            </div>
    </body>

    <%- include("partials/footer.ejs"); %>